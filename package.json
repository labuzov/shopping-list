{
  "name": "shopping-list",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "tsc && vite build --mode development",
    "build-prod": "tsc && vite build --mode production",
